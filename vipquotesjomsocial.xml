<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_VIPQUOTESJOMSOCIAL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.0</version>
    <creationDate>07 January, 2014</creationDate>
    <description><![CDATA[
    <p>Content - VipQuotes - JomSocial is a plugin that sends notifications and adds activity records to users' stream.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/news-display/quotes/6877" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_VIPQUOTESJOMSOCIAL_HELP_URL"/>
    
    <files>
        <filename plugin="vipquotesjomsocial">vipquotesjomsocial.php</filename>
        <filename>index.html</filename>
        
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_vipquotes/models/fields">
                
                <field name="add_activity" type="radio" default="1" label="PLG_CONTENT_VIPQUOTESJOMSOCIAL_ACTIVITY_STREAM" description="PLG_CONTENT_VIPQUOTESJOMSOCIAL_ACTIVITY_STREAM_DESC" class="btn-group" >
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="send_notification" type="radio" default="1" label="PLG_CONTENT_VIPQUOTESJOMSOCIAL_SEND_NOTIFICATION" description="PLG_CONTENT_VIPQUOTESJOMSOCIAL_SEND_NOTIFICATION_DESC" class="btn-group" >
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                <field name="notification_actor" type="user" default="" label="PLG_CONTENT_VIPQUOTESJOMSOCIAL_NOTIFICATION_ACTIOR" description="PLG_CONTENT_VIPQUOTESJOMSOCIAL_NOTIFICATION_ACTIOR_DESC" />
			</fieldset>
	            
        </fields>
	</config>
</extension>
